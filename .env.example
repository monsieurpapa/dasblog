# /home/ubuntu/accounting_project/.env.example
# Django settings
SECRET_KEY=your_django_secret_key_here # Change this in production!
DEBUG=True # Set to False in production
DJANGO_ALLOWED_HOSTS=localhost 127.0.0.1 [::1] # Add your domain in production

# Database settings (PostgreSQL)
POSTGRES_DB=accounting_db
POSTGRES_USER=accounting_user
POSTGRES_PASSWORD=your_secure_password_here # Change this!
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Redis settings
REDIS_URL=redis://redis:6379/0

# Celery settings
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Add other environment variables as needed
# e.g., EMAIL_HOST, EMAIL_PORT, etc.

